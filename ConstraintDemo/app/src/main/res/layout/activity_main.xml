<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左上角"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右上角"
        android:textSize="30sp"
        android:background="@color/teal_200"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左下角"
        android:textSize="30sp"
        android:background="@color/teal_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右下角"
        android:textSize="30sp"
        android:background="@color/purple_700"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/tv_center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="中间"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="A"
        android:textSize="30sp"
        android:background="#40E146"
        app:layout_constraintRight_toLeftOf="@+id/tv_center"
        app:layout_constraintTop_toTopOf="@id/tv_center"
        app:layout_constraintBottom_toBottomOf="@id/tv_center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="B"
        android:textSize="30sp"
        android:background="#FF5722"
        app:layout_constraintStart_toStartOf="@id/tv_center"
        app:layout_constraintEnd_toEndOf="@id/tv_center"
        app:layout_constraintTop_toBottomOf="@id/tv_center"
        app:layout_constraintBottom_toBottomOf="@id/tv_center"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="C"
        android:textSize="30sp"
        android:background="#FFEB3B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_center"
        app:layout_constraintLeft_toRightOf="@id/tv_center"
        app:layout_constraintBottom_toTopOf="@id/tv_center"/>

</androidx.constraintlayout.widget.ConstraintLayout>