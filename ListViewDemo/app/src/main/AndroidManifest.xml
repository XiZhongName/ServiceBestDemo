<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.listviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListViewDemo">
        <activity
            android:name=".BaseAdapterActivity"
            android:exported="false" />
        <activity
            android:name=".SimpleListActivity"
            android:exported="false"
            android:label="simpleList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ArrayListActivity"
            android:exported="false"
            android:label="ArrayList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="列表ListView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>